{
  "name": "backend-inventory",
  "version": "1.0.0",
  "description": "Express server built with TypeScript and Nodemon for development",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r dotenv/config ./src/app.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "build:watch": "tsc --watch",
    "package": "pkg ./dist/app.js --targets node18-linux-x64,node18-win-x64 --output dist/package/server"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.4",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
